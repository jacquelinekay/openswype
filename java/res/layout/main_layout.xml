<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/main_practice_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_practice" >
    </Button>

    <Button
        android:id="@+id/main_test_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_test" >
    </Button>

    <Button
        android:id="@+id/main_settings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_settings" >
    </Button>

    <Button
        android:id="@+id/main_about_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_about" >
    </Button>
</LinearLayout>
</LinearLayout>